<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Poetic | Sign In</title>
    <!-- load bottstrap 3.0.2-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <!-- load fontawesome 4.0.3-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style media="screen">
      body { padding-top: 80px; background-color: #e5efc1;}
      #loginButton{background-color: #39aea9;}
      h1, label{color: #5b5151;}
    </style>
  </head>
  <body>
    <div class="container">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="text-center">
          <img src="/assets/logo.png" alt="" width="600px;">
        </div>
        <h1><span class="fa fa-sign-in"></span>Login</h1>
        <% if (message.length > 0){%>
          <div class = "alert alert-danger"><%= message %></div>
          <% } %>
        <!-- login form -->
        <form id="signin" name="signin" method="post" action="signin">
          <div class="form-group">
            <label for="email">Email</label>
            <input class="text form-control" name="email" type="text" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input name="password" type="password" class="form-control"/>
          </div>
          <button type="submit" class="btn btn-warning btn-lg" id = "loginButton">Login</button>
        </form>
        <hr>
        <p>Need an account? <a href="/signup">Sign up</a></p>
        <p>Or go to <a href="/">Home</a>.</p>
      </div>
    </div>
  </body>
</html>
